<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Menu Items</title>
        <style>
            body {
                font-family: Arial, sans-serif;
            }

            .menu-item {
                border: 1px solid #ccc;
                padding: 10px;
                margin: 10px;
                border-radius: 5px;
            }

            .menu-item h3 {
                margin: 0;
            }

            .menu-item p {
                margin: 5px 0;
            }

            .menu-item .price {
                font-weight: bold;
            }
        </style>
    </head>
    <body>
      <h1>Menu Items</h1>
      <div id="menu-items-container">
        <% if (menuItems && menuItems.length > 0) { %>
          <% menuItems.forEach(item => { %>
            <div class="menu-item">
              <h3><%= item.name %></h3>
              <p><%= item.description %></p>
              <p class="price">$<%= item.price %></p>
            </div>
          <% }) %>
        <% } else { %>
          <p>No items found.</p>
        <% } %>
      </div>
    </body>

</html>
